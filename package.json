{
  "name": "lambda-dynamodb-starter",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "cdk": "cdk",
    "watch": "tsc --watch",
    "synth": "cdk synth",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "jest",
    "test:coverage": "jest --config jest.coverage.config.ts --coverage -u",
    "test:watch": "jest --watch",
    "prepare": "node -e \"const fs=require('fs'); const isCI = !!process.env.CI || !!process.env.GITHUB_ACTIONS; if (!fs.existsSync('.git') || isCI) process.exit(0); try { require('husky').install(); } catch(e) {}\""
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "aws-cdk-lib": "^2.102.0",
    "codecov": "^3.8.2",
    "constructs": "^10.0.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@aws-cdk/aws-lambda-nodejs": "^1.203.0",
    "@aws-sdk/client-dynamodb": "^3.848.0",
    "@aws-sdk/lib-dynamodb": "^3.850.0",
    "dotenv": "^17.2.1",
    "zod": "^4.0.10"
  },
  "lint-staged": {
    "*.ts": [
      "npm test -- --findRelatedTests"
    ]
  }
