{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "lib/**/*.ts",
    "bin/**/*.ts",
    "lambda/**/*.ts",
    "jest.config.ts",
    "jest.coverage.config.ts"
  ]
}
